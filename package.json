{
  "name": "mimor",
  "version": "0.0.18",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib"
  ],
  "main": "./lib/index.umd.js",
  "module": "./lib/index.mjs",
  "exports": {
    ".": {
      "require": "./lib/index.umd.js",
      "import": "./lib/index.mjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:with-prod-backend": "cross-env VITE_BACKEND_URL='https://api.mimor.app:5108' npm run dev",
    "api": "fidb serve database",
    "build:app": "vite build",
    "build:lib": "vite build -c vite-lib.config.ts",
    "build": "npm run build:app && npm run build:lib",
    "check:vue": "vue-tsc --noEmit",
    "check:vue:watch": "while true; do vue-tsc --noEmit --watch && break; done",
    "check": "tsc --noEmit",
    "check:watch": "tsc --noEmit --watch",
    "test": "vitest --run",
    "format": "prettier src --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/vue": "^2.0.18",
    "@vueuse/core": "^10.2.0",
    "@vueuse/head": "^1.1.26",
    "@xieyuheng/ty": "^0.1.22",
    "@xieyuheng/x-node": "^0.0.7",
    "autosize": "^6.0.1",
    "emulate-tab": "^1.2.1",
    "fidb": "^0.1.5",
    "focus-trap": "^7.4.3",
    "front-matter": "^4.0.2",
    "idb": "^7.1.1",
    "idb-keyval": "^6.2.1",
    "js-base64": "^3.7.5",
    "lodash": "^4.17.21",
    "path-browserify": "^1.0.1",
    "qs": "^6.11.2",
    "tailwindcss": "^3.3.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@types/autosize": "^4.0.1",
    "@types/lodash": "^4.14.195",
    "@types/path-browserify": "^1.0.0",
    "@types/qs": "^6.9.7",
    "@types/wicg-file-system-access": "^2020.9.6",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-rewrite-all": "^1.0.1",
    "vitest": "^0.32.2",
    "vue-tsc": "^1.8.1"
  }
}
